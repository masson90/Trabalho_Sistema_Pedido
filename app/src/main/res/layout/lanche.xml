<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgHaburguer"
        app:layout_constraintVertical_bias="0.15" />

    <CheckBox
        android:id="@+id/chkovo"
        android:layout_width="78dp"
        android:layout_height="31dp"
        android:text="Ovo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkbacon"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/chkbacon"
        android:layout_width="91dp"
        android:layout_height="32dp"
        android:text="Bacon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkqueijo"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/chksalada"
        android:layout_width="99dp"
        android:layout_height="28dp"
        android:text="Salda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkbatata"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="411dp"
        android:layout_height="195dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lanche" />

    <CheckBox
        android:id="@+id/chkpresunto"
        android:layout_width="103dp"
        android:layout_height="31dp"
        android:text="Presunto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgHaburguer"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/chkqueijo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mussarela"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chksalada"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/chkbatata"
        android:layout_width="122dp"
        android:layout_height="28dp"
        android:text="Batata Frita"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkpresunto"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/rgHaburguer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/rb1hb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 Hamburguer"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="195dp" />

        <RadioButton
            android:id="@+id/rb2hb"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="2 Hamburguer" />

        <RadioButton
            android:id="@+id/rb3hb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Hamburguer" />

    </RadioGroup>

    <Button
        android:id="@+id/btnProximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proximo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVoltar"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>